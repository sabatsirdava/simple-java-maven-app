pipeline {
    agent any
    tools {
        maven 'mavenHome'
        jdk 'javaHome'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }
    post {
        always {
            junit '**/target/test-*.xml'
        }
    }
}
